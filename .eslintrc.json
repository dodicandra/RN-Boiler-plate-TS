{
  "root": true,
  "extends": "@react-native-community",
  "parser": "@typescript-eslint/parser",
  "plugins": ["prettier"],
  "rules": {
    "comma-dangle": [
      "warn",
      {
        "arrays": "never",
        "objects": "never",
        "imports": "never",
        "exports": "never",
        "functions": "never"
      }
    ],
    "no-unused-vars": 0,
    "@typescript-eslint/no-unused-vars": 0,
    "curly": 0,
    "react-native/no-inline-styles": 0,
    "react-hooks/exhaustive-deps": 1,
    "no-new": 0,
    "no-undef": 0
  }
}
