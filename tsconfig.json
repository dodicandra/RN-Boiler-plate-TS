{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "lib": ["es6"],
    "allowJs": true,
    "jsx": "react-native",
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "#components/*": ["./src/components/*"],
      "#screen/*": ["./src/screen/*"],
      "#typing/*": ["./src/types/*"],
      "#context/*": ["./src/context/*"],
      "#navigation/*": ["./src/router/*"]
    }
  },
  "exclude": ["node_modules", "babel.config.js", "metro.config.js", "jest.config.js"]
}
